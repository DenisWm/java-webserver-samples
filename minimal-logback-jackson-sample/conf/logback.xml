<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.sample" level="DEBUG"/>
    <logger name="org.apache.catalina.core.StandardWrapper" level="DEBUG"/>
    <logger name="com.fasterxml.jackson.databind" level="DEBUG"/>
    <logger name="com.fasterxml.jackson.dataformat.xml" level="DEBUG"/>

    <logger name="com.fasterxml.jackson.core" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>